<% @tasks.each do |task| %>
  <ul>
    <li>
      <%= link_to task.title, task_path(task) %>
      (<%= task.details %>)
      Completed:
      <% if task.completed %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
    </li>
  </ul>
<% end %>
<%= link_to "Create Task", tasks_new_path %>



